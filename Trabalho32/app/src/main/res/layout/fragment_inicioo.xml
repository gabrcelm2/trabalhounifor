<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Inicioo">

    <LinearLayout
        android:layout_width="414dp"
        android:layout_height="808dp"
        android:layout_marginBottom="76dp"
        android:background="@color/Background"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".Inicioo">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:fontFamily="@font/amatica_sc"
            android:gravity="center"
            android:text="Sobre a Exposição"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/imginicio"
            android:layout_width="match_parent"
            android:layout_height="206dp"
            android:src="@drawable/imgprin" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/blinker_light"
            android:gravity="left"
            android:padding="12dp"
            android:text="Explorando a Arte Brasileira:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/blinker_light"
            android:gravity="left"
            android:padding="12dp"
            android:text="Exposição: Centelhas em Movimento"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/blinker_light"
            android:gravity="left"
            android:padding="12dp"
            android:text="Local: Espaço Cultural Unifor."
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:fontFamily="@font/blinker_light"
            android:gravity="left"
            android:padding="12dp"
            android:text="Entrada:Gratuita"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/blinker_light"
            android:gravity="left"
            android:padding="12dp"
            android:text="De 3 De Março de 2024 A 10 de Dezembro"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btinicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="20dp"
            android:padding="15dp"
            android:text="AVANÇAR"
            android:textSize="20sp"
            app:cornerRadius="15dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>